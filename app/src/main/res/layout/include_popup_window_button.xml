<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/popup_window_title_margin_horizontal">

        <TextView
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/popup_window_title_height"
            android:layout_marginVertical="@dimen/popup_window_title_margin_vertical"
            android:gravity="center"
            android:text="@string/popup_window_confirm"
            android:textColor="@color/color_popup_window_button_text_color"
            android:textSize="@dimen/popup_window_title_font_size" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_window_separate_height"
        android:background="@color/color_popup_window_separate_color" />

</LinearLayout>